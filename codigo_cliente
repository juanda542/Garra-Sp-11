import asyncio
from codigo_servidor1 import conectar_hub, enviar_programa

async def comandos_hub():
    hub = await conectar_hub()
    if not hub:
        return

    while True:
        tecla = input("Comando: ").strip().lower()

        if tecla == "p":
            print("Conexi√≥n finalizada")
            break
        elif tecla == "a":
            await enviar_programa(hub)

    await hub.disconnect()

if __name__ == "__main__":

    asyncio.run(comandos_hub())
